{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:definitelyTyped"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "prConcurrentLimit": 10,
  "updateInternalDeps": true,
  "recreateWhen": "never",
  "nvm": {
    "enabled": false
  }
}
